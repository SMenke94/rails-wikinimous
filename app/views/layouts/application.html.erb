  </head>

  <body>
    <div class="navbar">
      <%= link_to "Wikinimous", articles_path, class:"navbar-title" %>
      <%= link_to "New Article", new_article_path, class:"navbar-new-article" %>
    </div>
    <%= yield %>
  </body>
</html>
